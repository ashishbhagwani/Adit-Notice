<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="@drawable/plane"
            android:id="@+id/planeLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        </FrameLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_edit"
            android:elevation="3dp"
            tools:ignore="ContentDescription"
            android:layout_marginTop="140dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:id="@+id/editaccount" />

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/accountpanel"
            android:layout_below="@id/planeLayout">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/namecard"
                android:theme="@style/AppTheme"
                android:layout_marginTop="2dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/namecardtitle"
                        android:text="Name"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/namecardtitle"
                        android:id="@+id/namecardcontent"
                        tools:text="Ashish Bhagwani"
                        android:textSize="18sp"
                        android:paddingStart="35dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/namecard"
                android:theme="@style/AppTheme"
                android:id="@+id/enrollcard"
                android:layout_marginTop="2dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/enrollcardtitle"
                        android:text="Enrollment Number"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/enrollcardcontent"
                        android:layout_below="@id/enrollcardtitle"
                        tools:text="140010107006"
                        android:textSize="18sp"
                        android:paddingStart="35dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme"
                android:layout_below="@id/enrollcard"
                android:id="@+id/departmentcard"
                android:layout_marginTop="2dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/departmentcardtitle"
                        android:text="Department"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/departmentcardcontent"
                        android:layout_below="@id/departmentcardtitle"
                        tools:text="Computer Engineering"
                        android:textSize="18sp"
                        android:paddingStart="35dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme"
                android:layout_below="@id/departmentcard"
                android:id="@+id/yearcard"
                android:layout_marginTop="2dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/yearcardtitle"
                        android:text="Year of study"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/yearcardcontent"
                        android:layout_below="@id/yearcardtitle"
                        tools:text="Third year"
                        android:textSize="18sp"
                        android:paddingStart="35dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme"
                android:layout_below="@id/yearcard"
                android:id="@+id/emailcard"
                android:layout_marginTop="2dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailcardtitle"
                        android:text="Email Address"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailcardcontent"
                        android:layout_below="@id/emailcardtitle"
                        tools:text="ashishbhagwani@gmail.com"
                        android:textSize="18sp"
                        android:paddingStart="35dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme"
                android:layout_below="@id/emailcard"
                android:id="@+id/phonecard"
                android:layout_marginTop="2dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/phonecardtitle"
                        android:text="Mobile No"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/phonecardcontent"
                        android:layout_below="@id/phonecardtitle"
                        tools:text="9558029794"
                        android:textSize="18sp"
                        android:paddingStart="35dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>